@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
<div class="row"><ol class="breadcrumb">
@{
	
	int? catId = null;
	int? prodId = null;
	if (ViewData["CategoryID"] !=null)
	{
		catId = (int)ViewData["CategoryID"];
	}
	if (ViewData["GoodID"] !=null)
	{
		prodId = (int)ViewData["GoodID"];
	}
	List<CCategory> crumbs = UltimaWebService.GetCategoryBreadCrumbs(-1, prodId, catId);
	string comma = "";
	foreach(CCategory cr in crumbs)
	{
		<li><a href="/goods/@cr.CategoryId">@cr.Category</a></li>
			if (comma.Length == 0)
			{
				comma = ", ";
			}
	}
}	
</ol>
</div>
